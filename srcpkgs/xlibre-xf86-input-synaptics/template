# Template file for 'xlibre-xf86-input-synaptics'
pkgname=xlibre-xf86-input-synaptics
version=1.10.0.2
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config autoconf automake libtool"
makedepends="xlibre-xserver-devel libXtst-devel libevdev-devel libX11-devel libXi-devel xorgproto"
depends="libxtst libevdev libx11 libxi"
short_desc="XLibre fork of X.Org Synaptics driver for notebook touchpads"
maintainer="n3ptune-plan3t <n3ptune@plan3t>"
license="MIT"
homepage="https://github.com/X11Libre"
distfiles="https://github.com/X11Libre/xf86-input-synaptics/archive/refs/tags/${pkgname}-${version}.tar.gz"
checksum="3e6bc8453f5f957074db28b12e4826ef65ab017e0dd5e34a29d57692ce0c7fe5"
conflicts="xf86-input-synaptics synaptics"
replaces="synaptics"
provides="xf86-input-synaptics-${version}_${revision} synaptics"
archs="x86_64 aarch64"

# Build options
lib32disabled=yes
nodebug=yes

case "$XBPS_TARGET_MACHINE" in
    x86_64*)
        CFLAGS+=" -march=x86-64"
        ;;
    aarch64*)
        CFLAGS+=" -march=armv8-a"
        ;;
esac

# Security hardening flags
CFLAGS+=" -mtune=generic -O2 -pipe -fexceptions -Wp,-D_FORTIFY_SOURCE=3 -Wformat -Werror=format-security"
CFLAGS+=" -fstack-clash-protection -fno-omit-frame-pointer -mno-omit-leaf-frame-pointer"
LDFLAGS+=" -Wl,-O1 -Wl,--sort-common -Wl,--as-needed -Wl,-z,lazy -Wl,-z,relro -Wl,-z,pack-relative-relocs"

# Input drivers specific flags
CFLAGS+=" -fno-plt"
LDFLAGS+=" -Wl,-z,now"

if [ "$XBPS_TARGET_MACHINE" != "aarch64" ]; then
    CFLAGS+=" -fcf-protection"
fi

pre_configure() {
    ./autogen.sh
}

post_install() {
    vlicense COPYING
}
