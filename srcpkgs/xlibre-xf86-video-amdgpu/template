# Template file for 'xlibre-xf86-video-amdgpu'
pkgname=xlibre-xf86-video-amdgpu
version=23.0.0.5
revision=1
build_style=gnu-configure
configure_args="--prefix=/usr --enable-glamor"
hostmakedepends="pkg-config autoconf automake libtool"
makedepends="xlibre-xserver-devel MesaLib-devel libdrm-devel xorgproto eudev-libudev-devel libpciaccess-devel pixman-devel xorg-util-macros libXfont2-devel"
depends="virtual?xserver-abi-video-28_0 mesa-dri"
short_desc="XLibre fork of X.Org amdgpu video driver"
maintainer="artist for Xlibre <artist@xlibre.org>"
license="MIT"
homepage="https://github.com/X11Libre"
distfiles="https://github.com/X11Libre/xf86-video-amdgpu/archive/refs/tags/${pkgname}-${version}.tar.gz"
checksum="a255bf446272a87907ea0a13274536dcc65898c223fa42aa9afd52007ad23209"
conflicts="xf86-video-amdgpu"
provides="xf86-video-amdgpu-${version}_${revision}"
archs="x86_64 aarch64"

# Build options
lib32disabled=yes
nodebug=yes

case "$XBPS_TARGET_MACHINE" in
    x86_64*)
        CFLAGS+=" -march=x86-64"
        ;;
    aarch64*)
        CFLAGS+=" -march=armv8-a"
        ;;
esac

# Security hardening flags
CFLAGS+=" -mtune=generic -O2 -pipe -fexceptions -Wp,-D_FORTIFY_SOURCE=3 -Wformat -Werror=format-security"
CFLAGS+=" -fstack-clash-protection -fno-omit-frame-pointer -mno-omit-leaf-frame-pointer"
LDFLAGS+=" -Wl,-O1 -Wl,--sort-common -Wl,--as-needed -Wl,-z,lazy -Wl,-z,relro -Wl,-z,pack-relative-relocs"

if [ "$XBPS_TARGET_MACHINE" != "aarch64" ]; then
    CFLAGS+=" -fcf-protection"
fi

pre_configure() {
    ./autogen.sh
}

do_check() {
    make check
}

post_install() {
    vlicense COPYING
}
