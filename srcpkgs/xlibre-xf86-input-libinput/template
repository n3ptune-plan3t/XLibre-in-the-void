# Template file for 'xlibre-xf86-input-libinput'
# Maintainer: artist for Xlibre
pkgname=xlibre-xf86-input-libinput
_pkgname=xf86-input-libinput
version=1.5.1.0
revision=1
# The source tarball extracts to a non-standard directory name
wrksrc="${_pkgname}-${pkgname}-${version}"
archs="x86_64 aarch64"
build_style=gnu-configure
configure_args="--disable-static"
# Dependencies needed to run autogen.sh
hostmakedepends="pkg-config automake autoconf libtool"
# Depends on the XLibre server and a newer input ABI
makedepends="libinput-devel xlibre-xserver-devel"
depends="virtual?xserver-abi-input-26_1"
short_desc="XLibre fork of the generic input driver for the X.Org server based on libinput"
maintainer="artist for Xlibre"
license="MIT"
homepage="https://github.com/X11Libre"
distfiles="${homepage}/${_pkgname}/archive/refs/tags/${pkgname}-${version}.tar.gz"
checksum=f1be5a443af78307af18103a6bb614021fe163380b0eb43dec820a2389fbd6c8
lib32disabled=yes
nodebug=yes

# Apply hardened build flags from the XLibre project
case "$XBPS_MACHINE" in
 "x86_64")
  CFLAGS=" -march=x86-64"
  ;;
 "aarch64")
  CFLAGS=" -march=armv8-a"
  ;;
 *)
  CFLAGS=" -march=native"
  ;;
esac
CFLAGS+=" -mtune=generic -O2 -pipe -fexceptions -Wp,-D_FORTIFY_SOURCE=3 -Wformat -Werror=format-security"
CFLAGS+=" -fstack-clash-protection -fno-omit-frame-pointer -mno-omit-leaf-frame-pointer"
LDFLAGS=" -Wl,-O1 -Wl,--sort-common -Wl,--as-needed -Wl,-z,lazy -Wl,-z,relro -Wl,-z,pack-relative-relocs"
if [[ $XBPS_MACHINE != 'aarch64' ]]; then
 CFLAGS+=" -fcf-protection"
fi
# Specific flags for xf86-input-* drivers
CFLAGS+=" -fno-plt"
LDFLAGS+=" -Wl,-z,now"
CXXFLAGS="${CFLAGS} -Wp,-D_GLIBCXX_ASSERTIONS"

pre_configure() {
	# Force regeneration of configure script
	NOCONFIGURE=1 ./autogen.sh
}

post_install() {
	vlicense COPYING
}

xlibre-xf86-input-libinput-devel_package() {
	lib32disabled=yes
	short_desc+=" - development files"
	depends="${sourcepkg}>=${version}_${revision} libinput-devel"
	pkg_install() {
		vmove usr/include
		vmove usr/lib/pkgconfig
	}
}
