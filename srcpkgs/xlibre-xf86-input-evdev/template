# Template file for 'xlibre-xf86-input-evdev'
pkgname=xlibre-xf86-input-evdev
version=2.11.0.2
revision=1
build_style=gnu-configure
hostmakedepends="pkg-config autoconf automake libtool"
makedepends="xlibre-xserver-devel mtdev-devel libevdev-devel xorgproto"
depends="mtdev libevdev"
short_desc="XLibre fork of X.Org evdev input driver"
maintainer="n3ptune-plan3t <n3ptune@plan3t>"
license="HPND-sell-variant AND MIT"
homepage="https://github.com/X11Libre"
distfiles="https://github.com/X11Libre/xf86-input-evdev/archive/refs/tags/${pkgname}-${version}.tar.gz"
checksum="70a8a65ec56cce7057b8491f68744c6883debe8750948bb290ae7b1c3ec28dfc"
conflicts="xf86-input-evdev"
provides="xf86-input-evdev-${version}_${revision}"
archs="x86_64 aarch64"

# Build options
lib32disabled=yes
nodebug=yes

case "$XBPS_TARGET_MACHINE" in
    x86_64*)
        CFLAGS+=" -march=x86-64"
        ;;
    aarch64*)
        CFLAGS+=" -march=armv8-a"
        ;;
esac

# Security hardening flags
CFLAGS+=" -mtune=generic -O2 -pipe -fexceptions -Wp,-D_FORTIFY_SOURCE=3 -Wformat -Werror=format-security"
CFLAGS+=" -fstack-clash-protection -fno-omit-frame-pointer -mno-omit-leaf-frame-pointer"
LDFLAGS+=" -Wl,-O1 -Wl,--sort-common -Wl,--as-needed -Wl,-z,lazy -Wl,-z,relro -Wl,-z,pack-relative-relocs"

# Input drivers specific flags
CFLAGS+=" -fno-plt"
LDFLAGS+=" -Wl,-z,now"

if [ "$XBPS_TARGET_MACHINE" != "aarch64" ]; then
    CFLAGS+=" -fcf-protection"
fi

pre_configure() {
    ./autogen.sh
}

post_install() {
    vlicense COPYING
}
